
<div class="row">
    <!-- CONTENT MAIL -->
    <div class="col-sm-12" id="invoice-sec">
        <div class="">
            <div class="clearfix"></div>
            <div class="row">
                <div class="col-md-12">
                    <div class="x_panel">
                        <div class="x_content">
                            <section class="content invoice">
                                <!-- title row -->
                                <div class="row">
                                    <div class="col-xs-12 invoice-header">
                                        <h1>
                                            <i class="fa fa-globe"></i> Payment.
                                            <small class="right-pull">Date: 16/08/2016</small>
                                        </h1>
                                    </div>
                                    <!-- /.col -->
                                </div>
                                <!-- info row -->
                                <div class="row invoice-info">
                                    <div class="col-sm-4 invoice-col">
                                        From
                                        <address>
                                            <strong>{{Client.ShopName}}</strong>
                                            <br>Own Name: {{Client.PersonName}}
                                            <br>Address: {{Client.FullAddress}}
                                            <br>Phone: +91 {{Client.Mobile}}
                                            <br>Email: {{Client.Email}}
                                        </address>
                                    </div>
                                    <!-- /.col -->
                                    <div class="col-sm-4 invoice-col">
                                        To
                                        <address>
                                            <strong>Seller ShopName</strong>
                                            <br>Seller complete address will come here.
                                            <br>P.S: Dinara Dist: Rohtash Bihar Pin: 802213
                                            <br>Phone: +91 (804) 123-9876
                                            <br>Email: admin@gmail.com
                                        </address>
                                    </div>
                                    <!-- /.col -->
                                    <div class="col-sm-4 invoice-col">
                                        <b>Invoid No. ED007612</b>
                                        <br>
                                        <br>
                                        <b>Bill No: </b> SOPBIL0097
                                        <br>
                                        <b>Payment Date:</b> 27/06/2018
                                        <br>
                                        <b>Account:</b> 968-34567
                                    </div>
                                    <!-- /.col -->
                                </div>
                                <!-- /.row -->
                                <!-- Table row -->
                                <div class="row" style="margin-bottom: 0px;">
                                    <div class="col-sm-12 info-table">
                                        <table class="table student-info-table" style="margin-bottom: 0px; border: 1px solid #d9d9d9;">
                                            <thead>
                                                <tr>
                                                    <th colspan="3" class="stud-info-head">
                                                        CLIENT DETAIL
                                                    </th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr>
                                                    <td>Name : &nbsp; {{Client.PersonName}}</td>
                                                    <td>Mobile : &nbsp; {{Client.Mobile}}</td>
                                                    <td>Bank Name : &nbsp; {{Client.BankName}}</td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                    <div class="col-xs-12 table" style="margin-bottom: 4px;">
                                        <table class="table" style="margin-bottom: 0px; border: 1px solid #d9d9d9;">
                                            <thead>
                                                <tr>
                                                    <th>#</th>
                                                    <th>ItemName</th>
                                                    <th>M/Qty</th>
                                                    <th>Discount</th>
                                                    <th>Total Amount</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr ng-repeat="items in ItemList">
                                                    <td>{{$index + 1}}</td>
                                                    <td>{{items.Item}}, {{items.ItemName}}</td>
                                                    <td>{{items.MQty}}</td>
                                                    <td>0</td>
                                                    <td>{{items.TotalAmount}}</td>
                                                </tr>
                                                <tr>
                                                    <td colspan="3" rowspan="5">
                                                        Invoice Description and Rules
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <th>Subtotal:</th>
                                                    <td><i class="fa fa-inr"></i>&nbsp;{{GrandTotalPrice}}</td>
                                                </tr>
                                                <tr>
                                                    <th>Tax (0%)</th>
                                                    <td><i class="fa fa-inr"></i>&nbsp;0</td>
                                                </tr>
                                                <tr>
                                                    <th>Shipping:</th>
                                                    <td><i class="fa fa-inr"></i>&nbsp;0</td>
                                                </tr>
                                                <tr>
                                                    <th>Total:</th>
                                                    <td>{{GrandTotalPrice}}</td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                    <!-- /.col -->
                                </div>
                                <!-- /.row -->
                                <div class="row sig-footer" style="padding-left: 10px;">
                                    <div class="footer-dv">
                                        <p>Seller Signature</p>
                                    </div>
                                    <div class="footer-dv">
                                        <span>STAMP</span>
                                    </div>
                                    <div class="footer-dv" style="border: none;">
                                        <p>Client Signature</p>
                                    </div>
                                </div>
                                <!-- /.row -->
                                <!-- this row will not appear when printing -->
                                <div class="no-print">
                                    <button class="btn btn-default" ng-click="printInvoice()"><i class="fa fa-print"></i> Print</button>
                                    <button class="btn btn-default btn-primary" ng-click="SubmitForPayment()"><i class="fa fa-print"></i> Print</button>
                                </div>
                            </section>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /CONTENT MAIL -->
</div>
<script type="text/javascript">
    var PaymentData = null;
    if(typeof @Html.Raw(@ViewBag.PartialViewData) != "undefined"){
        PaymentData = @Html.Raw(@ViewBag.PartialViewData);
    }
</script>
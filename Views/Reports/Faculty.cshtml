
@{
    ViewBag.Title = "Faculty";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="right_col" role="main" ng-controller="facultyReportCtrl">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>School faculty <small>Faculty minimum info.</small></h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>
                                <a href="#">Settings 1</a>
                            </li>
                            <li>
                                <a href="#">Settings 2</a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="form-group dv-inline">
                            <div class="col-md-3 col-sm-3 col-xs-12 marginBottom-10">
                                <label class="control-label col-md-12 col-sm-12 col-xs-12 no-padding">
                                    Name
                                </label>
                                <input id="nameFilter" placeholder="Enter Name" class="form-control col-md-7 col-xs-12" required="required" type="text">
                            </div>
                        </div>
                        <div class="form-group dv-inline">
                            <div class="col-md-3 col-sm-3 col-xs-12 marginBottom-10">
                                <label class="control-label col-md-12 col-sm-12 col-xs-12 no-padding">
                                    Mobile number
                                </label>
                                <input id="mobileFilter" placeholder="Enter mobile no." class="form-control col-md-7 col-xs-12" required="required" type="text">
                            </div>
                        </div>
                        <div class="form-group dv-inline">
                            <div class="col-md-3 col-sm-3 col-xs-12 marginBottom-10">
                                <label class="control-label col-md-12 col-sm-12 col-xs-12 no-padding">
                                    Email id
                                </label>
                                <input id="emailFilter" placeholder="Enter email id" class="form-control col-md-7 col-xs-12" required="required" type="text">
                            </div>
                        </div>
                        <div class="col-sm-3 col-md-3 col-xs-12 filter-btn">
                            <button type="submit" class="btn btn-default" ng-click="resetAll()"><i class="fa fa-refresh"></i>&ensp;Reset</button>
                            <button type="submit" class="btn btn-success" ng-click="searchByFilter()"><i class="fa fa-filter"></i>&ensp;Search</button>
                        </div>
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table table-striped jambo_table bulk_action">
                        <thead>
                            <tr class="headings">
                                <th class="column-title">#Index </th>
                                <th class="column-title">Full Name</th>
                                <th class="column-title">Class-Sec</th>
                                <th class="column-title">Mobile No.</th>
                                <th class="column-title">Email Id</th>
                                <th class="column-title no-link last">
                                    <span class="nobr">Action</span>
                                </th>
                                <th class="bulk-actions" colspan="7">
                                    <a class="antoo" style="color:#fff; font-weight:500;">Bulk Actions ( <span class="action-cnt"> </span> ) <i class="fa fa-chevron-down"></i></a>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="item in TableResultSet track by $index" ng-class="$even ? 'even pointer' : 'odd pointer'">
                                <td>{{item.Index}}</td>
                                <td>{{item.FName}}</td>
                                <td>{{item.ClassSection}}</td>
                                <td>{{item.MobileNumber}}</td>
                                <td>{{item.Email}}</td>
                                <td>
                                    <input type="hidden" name="uid" value="{{item.StaffMemberUid}}" />
                                    <a href="javascript:void(0)" class="anc-edit" ng-click="editStaffMember()"><i class="fa fa-edit"></i></a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="row">
                    <div class="col-sm-5">
                        <div class="dataTables_info" id="datatable_info" role="status" aria-live="polite">
                            Showing {{fromCount}} to {{toCount}} of {{recordDetail.total}} entries
                        </div>
                    </div>
                    <div class="col-sm-7">
                        <div class="dataTables_paginate paging_simple_numbers" id="paging-dv">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    var Data = @Html.Raw(@ViewBag.Result);
</script>
<script src="~/Scripts/facultyReport.js"></script>